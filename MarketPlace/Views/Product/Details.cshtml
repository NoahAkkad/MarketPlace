@model Product 

<div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">Product Details</h2>
        <hr />
    </div>

    <div class="mb-3 row">
        <label asp-for="Name" class="col-md-2"></label>
        <div class="col-md-10">
            <p>@Model.Name</p>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="Price" class="col-md-2"></label>
        <div class="col-md-10">
            <p>@Model.Price</p>
        </div>
    </div>
    <div class="mb-3 row">
        <label asp-for="Category" class="col-md-2"></label>
        <div class="col-md-10">
           
            <p>@(Model.Category != null ? Model.Category.Name : "N/A")</p>
        </div>
    </div>

    <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary">
        Back To Start Page
    </a>
</div>